<div class='container mt-5'>
  <div class='row'>
    <h2>新規会員登録</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="row">
      <span>名前</span><br>
      <span class="col"><%= f.label :"(姓)" %>
        <%=f.text_field :last_name, autofocus: true,autocomplete:  "family-name", placeholder:"令和",class: "form-control w-100"%>
      </span>

      <span class="col"><%= f.label :"(名)" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name",placeholder:"道子",class: "form-control w-100"%>
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <span>フリガナ</span><br>
      <span class="col"><%= f.label :"(セイ)" %>
        <%=f.text_field :last_name_kana, autofocus: true,autocomplete:  "family-name",placeholder:"レイワ",class: "form-control w-100" %>
      </span>
      <span class="col"><%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name",placeholder:"ミチコ",class: "form-control w-100" %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <span>メールアドレス</span><br>
      <span class="col">
        <% f.label :email,"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",class: "form-control w-100" %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <span>郵便番号(ハイフンなし)</span><br>
      <span class="col">
        <% f.label :postal_code,"郵便番号" %>
        <%= f.text_field :postal_code, autofocus: true, placeholder:"00000000",class: "form-control w-100" %>
      </span>
    </div>
  </div>
  
  <div class="form-group">
    <div class="row">
      <span>住所</span><br>
      <span class="col">
        <% f.label :address,"住所" %>
        <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0",class: "form-control w-100" %>
      </span>
    </div>
  </div>
  
  <div class="form-group">
    <div class="row">
      <span>電話番号(ハイフンなし)</span><br>
      <span class="col">
        <% f.label :telephone_number,"電話番号" %>
        <%#= f.text_field :telephone_number, autofocus: true, placeholder:"00000000",class: "form-control w-100" %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> 文字以上)
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control w-100" %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label :パスワード %>(確認用)
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control w-100" %>
    </div>
  </div>

  <div>
    
  </div>
<% end %>

<div class="container text-center mt-4">
  <div>
    <b class="font-weihgt-bold">既に登録済みの方</b>
    <br>
    <%= render "public/shared/links" %>
  </div>
</div>
