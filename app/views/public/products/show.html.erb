<div class="row">
	<div class="col-xs-3">
		<%= render 'public/products/genre', genres: @genres %>
	</div>

	<div class="col-xs-offset-1">
		<div class="product-image">
      <%= image_tag @product.image, size: "200x200" %>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="detail">
			<h2><%= @product.name %></h2>
			<p><%= @product.description %></p>
			<h3 class="product-price">￥<%= (@product.tax_excluded_price * 1.1).to_i %><span>（税込）</span></h3>
			<%= form_with(model: @cart_items, url: cart_items_path, method: :post, local: true) do |f| %>
		      <%= f.label :quantity, "個数選択" %>
		      <%= f.number_field :quantity, min: 1, max: 100, placeholder: '個数選択', class:"quantity-select-form" %>
		      <%= f.hidden_field :id, :value => @product.id %>
		      <%= f.submit "カートに入れる", class: "btn btn-primary" %>
		    <% end %>
		</div>
	</div>
</div>
