<div class="container mt-5">
  <div class="row">
    <div class="col-lg-2">
				<%= render 'public/products/genre', genres: @genres %>
			</div>

			<div class="col-lg-4 text-center">
		      <% if @product.image.attached? %>
               <%= image_tag @product.image, size: "250x250" %>
          <% else %>
                <%= image_tag 'no_image.jpg', size: "250x250" %>
          <% end %>
			</div>
			<div class="col-lg-6">
				<div class="detail">
					<h2><%= @product.name %></h2>
					<p><%= @product.description %></p>
					<h3 class="product-price">￥<%= (@product.tax_excluded_price * 1.1).to_i %><span>（税込）</span></h3>
					<%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
				      <%= f.label :quantity, "個数選択" %>
				      <%= f.number_field :quantity, min: 1, max: 100, placeholder: '個数選択', class:"quantity-select-form" %>
				      <%= f.hidden_field :product_id, :value => @product.id %>
				      <% if current_customer %>
				        <%= f.hidden_field :customer_id, :value => current_customer.id %>
				      <% end %>


				      <% if @product.is_active == false %>
				        <span>売り切れ</span>
				       <% else %>
                <% if current_customer %>
	                	<%= f.submit "カートに入れる", class: "btn btn-primary" %>
	                <% end %>
               <% end %>
				    <% end %>
				</div>
			</div>
		</div>
   </div>
  </div>
</div>