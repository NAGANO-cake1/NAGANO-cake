<div class="container">
  <div class="row">
    <div class="col-md-3 mt-4">
       	<%= render 'public/products/genre', genres: @genres %>
	   </div>
  </div>

    <div class='col-md-8 offset-md-1'>
      <h4>商品一覧</h4>

      <div class='flex flex-wrap justify-center'>
        <% @products.each do |product| %>
          <div class="w-full max-w-sm rounded-lg xl:w-4/12 md:w-6/12">
            <%= link_to product_path(product) do %>
              <%= image_tag product.image, size: "300x300", class: "p-5 object-cover" %>
              <div class="px-5 pb-5">
              <p class="text-3xl font-semibold tracking-tight text-gray-900 mb-4"><%= product.name %></p>
            <% end %>

                <div class="flex justify-between items-center">
                  <span class="text-3xl font-bold text-gray-900"><%= number_to_currency(product.tax_excluded_price, unit: "¥", strip_insignificant_zeros: true) %></span>

                  <% if product.is_active == false %>
                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded">In stock</span>
                  <% else %>
                    <span class="bg-red-100 text-red-800 text-xs font-semibold p-2 rounded">Out of stock</span>
                  <% end %>

                </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>