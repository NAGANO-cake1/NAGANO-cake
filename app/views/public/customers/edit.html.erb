<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        会員情報編集
      </strong>
    </h3>
  </div>
  <%= form_with model:@customer, url: information_customers_path, local:true do |f| %>
  <div class="row mt-4">
      
    <div class='row'>
      <div class="col-xs-offset-1">
        <%#= form_with model: @customer, url: information_customers_path, method: :patch do |f| %>
        
        <table>
          <tbody>
              <tr>
                  <td>氏名</td>
                  <td><%= f.text_field :last_name %></td>
                  <td><%= f.text_field :first_name %></td>
              </tr>

              <tr>
                  <td>フリガナ</td>
                  <td><%= f.text_field :last_name_kana %></td>
                  <td><%= f.text_field :first_name_kana %></td>
              </tr>
              <tr>
                  <td>郵便番号</td>
                  <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                  <td>住所</td>
                  <td><%= f.text_field :address %></td>
              </tr>
              <tr>
                  <td>電話番号</td>
                  <td><%= f.text_field :telephone_number %></td>
              </tr>
              <tr>
                  <td>メールアドレス</td>
                  <td><%= f.text_field :email %></td>
              </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
            <%= f.submit "変更を保存する" ,class: 'btn btn-outline-success' %>
            <%= link_to "退会する", unsubscribe_customers_path, class: 'btn btn-danger' %>
        
      </div>
  </div>
  <% end %>
  
</div>