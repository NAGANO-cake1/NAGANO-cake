<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        会員情報編集
      </strong>
    </h3>
  </div></br>
  <%= form_with model:@customer, url: information_customers_path, local:true do |f| %>
  
  <div class="row">
    <div class="col">
      
      <div class="row">
        <div class="col-3">
          <p>氏名</p>
        </div>
        <div class="col-9">
          <%= f.text_field :last_name %>&nbsp;<%= f.text_field :first_name %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-3">
          <p>フリガナ</p>
        </div>
        <div class="col-9">
          <%= f.text_field :last_name_kana %>&nbsp;<%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>郵便番号</p>
        </div>
        <div class="col-9">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>住所</p>
        </div>
        <div class="col-9">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>電話番号</p>
        </div>
        <div class="col-9">
          <%= f.text_field :telephone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>
        <div class="col-9">
          <%= f.text_field :email %>
        </div>
      </div>
        
    </div>
  </div>
  
  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
          <%= f.submit "変更を保存する" ,class: 'btn btn-outline-success' %>
          <%= link_to "退会する", unsubscribe_customers_path, class: 'btn btn-danger' %>
      </div>
  </div>
  <% end %>
  
</div>