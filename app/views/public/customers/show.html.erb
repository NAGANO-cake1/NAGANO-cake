<div class='container mt-5'>
    <div class='row'>
      <h3>
          <strong>マイページ</strong>
      </h3>
    </div>
    <div class='row'>
        <div class="d-flex p-2 bd-highlight">
            <strong>登録情報</strong>
            <div class="col">
            <%= link_to "編集する", information_edit_customers_path, class: 'btn btn-outline-success' %>
            </div>
        </div>
    </div>
    <div class='row'>
        <div class="col-md-7">
            <table class="table table-bordered border-dark">
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">氏名</td>
                <td>
                    <%= @customer.last_name + @customer.first_name %>
                </td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">カナ</td>
                <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">郵便番号</td>
                <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">住所</td>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 20%">電話番号</td>
                <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <td bgcolor= "#F2F2F2", scope="col" style="width: 30%">メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </table>
        </div>
    </div>
    <div class='row'>
        <div class="d-flex p-2 bd-highlight">
            <strong>配送先</strong>
            <div class="col">
            <%= link_to "一覧を見る", delivery_addresses_path, class: 'btn btn-outline-primary' %>
            </div>
        </div>
    </div>
    <div class='row'>
        <div class="d-flex p-2 bd-highlight">
            <strong>注文履歴</strong>
            <div class="col">
            <%= link_to "一覧を見る", orders_path, class: 'btn btn-outline-primary' %>
            </div>
        </div>
    </div>
</div>