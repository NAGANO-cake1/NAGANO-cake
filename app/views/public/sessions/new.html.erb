<div class="container">
  <div class="form-group row">
    <div class="col">
      <h3 class="mt-2">ログイン</h3>
    </div>
  </div>
  
  <div class="form-group row">
    <p>
      <b class="col">会員の方はこちらからログイン</b>
    </p>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row">
    <label class="col-3 mb-0 pr-0">メールアドレス</label>
    <div class="col-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-3 mb-0 pr-0">パスワード</label>
    <div class="col-9">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  <div class="container text-center mt-4">
    <%= f.submit "ログイン", class: 'btn btn-outline-primary' %>
  </div>
<% end %>
  <div class="container text-center mt-4">
    <div>
      <b class="font-weihgt-bold">会員登録がお済みでない方</b>
      <br>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>