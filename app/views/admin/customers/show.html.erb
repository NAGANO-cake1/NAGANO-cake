<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        <%= @customer.last_name %><%= @customer.first_name %>
        さんの会員詳細
      </strong>
    </h3>
  </div>
  <div class="row mt-4">
    <div class='row'>
      <div class="col-xs-offset-1">
        <table>
          <tbody>
              <tr>
                  <td>会員ID</td>
                  <td><%= @customer.id %></td>
              </tr>
              <tr>
                  <td>氏名</td>
                  <td><%= @customer.last_name + @customer.first_name %></td>
              </tr>
              <tr>
                  <td>フリガナ</td>
                  <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
              </tr>
              <tr>
                  <td>郵便番号</td>
                  <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                  <td>住所</td>
                  <td><%= @customer.address %></td>
              </tr>
              <tr>
                  <td>電話番号</td>
                  <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                  <td>メールアドレス</td>
                  <td><%= @customer.email %></td>
              </tr>
              <tr>
                  <td>会員ステータス</td>
                  <td>
                  <% if @customer.is_deleted === false %>
                    <strong class="text-success">有効</strong>
                  <% else %>
                    退会
                  <% end %>
                  </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
        <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-outline-success' %>
        <%= link_to "注文一覧を見る", admin_customers_path, class: 'btn btn-outline-primary' %>
      </div>
  </div>
  
</div>