<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        <%= @customer.last_name %><%= @customer.first_name %>
        さんの会員詳細
      </strong>
    </h3>
  </div></br>

    <div class="row">
      <div class="col">
        
        <div class="row">
          <div class="col-3">
            <p>会員ID</p>
          </div>
          <div class="col-9">
            <%= @customer.id %>
          </div>
        </div>
          
        <div class="row">
          <div class="col-3">
            <p>氏名</p>
          </div>
          <div class="col-9">
            <%= @customer.last_name + @customer.first_name %>
          </div>
        </div>
          
        <div class="row">
          <div class="col-3">
            <p>フリガナ</p>
          </div>
          <div class="col-9">
            <%= @customer.last_name_kana + @customer.first_name_kana %>
          </div>
        </div>
  
        <div class="row">
          <div class="col-3">
            <p>郵便番号</p>
          </div>
          <div class="col-9">
            <%= @customer.postal_code %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <p>住所</p>
          </div>
          <div class="col-9">
            <%= @customer.address %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3">
            <p>電話番号</p>
          </div>
          <div class="col-9">
            <%= @customer.telephone_number %>
          </div>
        </div>
  
        <div class="row">
          <div class="col-3">
            <p>メールアドレス</p>
          </div>
          <div class="col-9">
            <%= @customer.email %>
          </div>
        </div>
  
        <div class="row">
          <div class="col-3">
            <p>会員ステータス</p>
          </div>
          <div class="col-9">
            <% if @customer.is_deleted === false %>
              <strong class="text-success">有効</strong>
            <% else %>
            退会
            <% end %>
          </div>
        </div>
  
      </div>
    </div>
  
  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
        <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-outline-success' %>
        <%= link_to "注文一覧を見る", admin_products_path, class: 'btn btn-outline-primary' %>
      </div>
  </div>
  
</div>