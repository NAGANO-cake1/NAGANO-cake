<div class="container my-5 px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <div class="row px-5 py-4">
        <h4 class="bg-light">会員一覧</h4>
      </div>
      
      <table class="table">
        <thead class="thead-lignt bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td><!--メアド-->
              <td><!--有効、退会ステータス-->
                  <% if customer.is_deleted === false %>
                    <strong class="text-success">有効</strong>
                  <% else %>
                    退会
                  <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="mt-5">
    <%= paginate @customers %>
  </div>
</div>