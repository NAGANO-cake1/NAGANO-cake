<%= render :layout => '/admin/shared/section_layout', :locals => {:title => '会員一覧'} do %>
  <table class="table">
    <thead class="thead-lignt bg-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td><!--メアド-->
          <td><!--有効、退会ステータス-->
              <% if customer.is_deleted === false %>
                <strong class="text-success">有効</strong>
              <% else %>
                退会
              <% end %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <div class="mt-5">
    <%= paginate @customers, theme: 'twitter-bootstrap-4'  %>
  </div>
<% end %>