<%= render :layout => '/admin/shared/section_layout', :locals => {:title => 'ジャンル一覧・追加'} do %>
  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :ジャンル名 %>&emsp;
        <%= f.text_field :name %>&emsp;
        <%= f.submit "新規登録", class: "btn btn-outline-primary"%>
      <% end %>
    </div>
  </div>
  <table class="table mt-4" style="width: 40%">
    <thead class="thead-lignt bg-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-outline-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>